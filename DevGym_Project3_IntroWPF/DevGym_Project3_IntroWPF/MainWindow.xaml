<Window x:Class="DevGym_Project3_IntroWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DevGym_Project3_IntroWPF"
        mc:Ignorable="d"
        Title="Short Cutter"
        Background="Black"
        MinWidth="100" MinHeight="100"
        Width="525" Height="350" Icon="Resources/DeveloperGymIcon.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Name="EyeRow" Height="20" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <!-- Region Row 0, The Eye -->
        <Canvas Name="TheEye" Grid.Row="0">
            <Rectangle Name="Eye0" Canvas.Left="0" Canvas.Top="0" Width="20" Height="{Binding ElementName=TheEye, Path=ActualHeight}" Fill="Red" Panel.ZIndex="100" />
            <Rectangle Name="Eye1" Canvas.Left="-20" Canvas.Top="0" Width="20" Height="{Binding ElementName=TheEye, Path=ActualHeight}" Fill="DarkRed" Panel.ZIndex="75" />
        </Canvas>
        <!-- EndRegion -->

        <!-- Region Row 1, Shortcuts -->
        <!-- EndRegion -->
    </Grid>
</Window>
